@model IEnumerable<ToysMVCASP.Models.Toy>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToyRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryObj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToyRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryObj.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ToyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ToyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
